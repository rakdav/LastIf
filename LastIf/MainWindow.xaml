<Window x:Class="LastIf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LastIf"
        mc:Ignorable="d"
        Title="Функции" Height="350" Width="400" Background="Green" FontSize="20">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0">
            <Label Content="Введите x:"/>
            <TextBox x:Name="X" Margin="10 10 10 10"/>
        </StackPanel>
        <StackPanel Grid.Row="1">
            <Label Content="Введите y:"/>
            <TextBox x:Name="Y" Margin="10 10 10 10"/>
        </StackPanel>
        <Button Content="Вычислить" Margin="10 10 10 10" Grid.Row="2" Click="Button_Click"/>

        <TextBlock x:Name="Result" Grid.Row="3" Margin="10 10 10 10"/>
    </Grid>
</Window>
